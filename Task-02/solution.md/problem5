#Escape false alarm

code:
t=int(input())
for i in range(t):
    n,x=map(int,input().split())
    doors= list(map(int,input().split()))
     
    flag=0
    for i in range(n):
        if doors[i]==1:
            flag=i
            break
            
    if (flag+x)>=(n-1):
        print("YES")
    else:
        print("NO")
        
